
<h1> Create Account </h1>

<% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |m| %>
            <li>
                <%= m %>
            </li>
        <% end %>
    </ul>
<% end %>
<div class="new_account">
<%= form_for @user, url: users_path do |u| %>
    <p>
<%= u.label "Name:" %><br>
<%= u.text_field :name %>
    </p>
    <p>
<%= u.label "Email:" %><br>
<%= u.text_field :email %>
    </p>
    <p>
<%= u.label "Password:" %><br>
<%= u.password_field :password %>
    </p>
    <p>
<%= u.label "Password Confirmation:" %><br>
<%= u.password_field :password_confirmation %>
    </p>
    <p>
<%= u.submit "Sign Up!", :class => "button" %>
    </p>
<% end %>
</div>