<div class="container">
<h1 class="title"><%= @post.title %></h1>
<h3 class="writer">Written by <%= @user.name %></h3>
<div class="buttonlocat">
<button class="button"><%= link_to "Add Comment", new_users_post_comment_path(@post) %></button>
<button class="button"><%= link_to "Edit Post", edit_users_post_path(@post) %></button>
<button class="delete"><%= link_to "Delete Post", users_post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %></button>
</div>
    <img src="<%= @post.img_url %>">
    <p class="article"><%= @post.article %></p>
    <hr>
<div class="comments">
    <h2 class="c_title">Comments:</h2>
    <% @post.comments.each do |c| %>
        <div class="comment_contain">
        <h4><%= c.name %> said:</h4>
        <p><%= c.message %></p>
        <button class="delete"><%= link_to "Delete Comment", users_post_comment_path(c), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %></button>
    <% end %>
    </div>
    </div>
    </div>